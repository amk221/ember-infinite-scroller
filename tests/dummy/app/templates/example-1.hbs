<p>An action is fired when infinite scroll component is scrolled to the very bottom</p>

{{#infinite-scroller
  class="example-1"
  onLoadMore=(action "loadMore")
as |scroller|}}
  {{#each things as |thing|}}
    <div class="thing">{{thing.name}}</div>
  {{/each}}
  {{#if scroller.isLoading}}
    <div class="status">Loading...</div>
  {{/if}}
{{/infinite-scroller}}